<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTime.Pages.NavConPage2"
             Title="NavConPage2"
             BackgroundColor="Black">
    <VerticalStackLayout>

        <Label 
            Text="Navigation Page 2"
            VerticalOptions="Center" 
            Margin="10"
            FontSize="20"
            FontAttributes="Bold"
            TextColor="White"
            BackgroundColor="LightBlue" 
            HorizontalOptions="Center" />


        <Button
                x:Name="CFP3"
                Text="click here for Page 3"
                Margin="20"
                Clicked="Nav2_clicked"
                
                
                />

        <Button
                x:Name="CTC"
                Text="Click to close"
                Margin="20" 
                Clicked="Nav2C_clicked"
                
                
                />

    </VerticalStackLayout>
</ContentPage>