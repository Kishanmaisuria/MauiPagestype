<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTime.Pages.FlyoutPages.FlyPages"
             Title="FlyPages"
             FlyoutLayoutBehavior="Split">
    
    <FlyoutPage.Flyout>
        <ContentPage Title="My App" BackgroundColor="DarkBlue">
            <VerticalStackLayout>
                <Label Text="This is FlyoutPage.Flyout"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       Margin="20"/>
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage BackgroundColor="Black">
                    <VerticalStackLayout>
                        <Label Text="This is FlyoutPage.Detail"
                               FontAttributes="Bold"
                               TextColor="White"
                           HorizontalTextAlignment="Center"
                           Margin="20"/>
                    </VerticalStackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>


</FlyoutPage>